# Minnesota.CEO Environment Variables
# Copy this file to .env.local for development

# Database Configuration
# PostgreSQL connection string (optional - will use mock data if not set)
DATABASE_URL=postgresql://username:password@localhost:5432/minnesota_ceo?sslmode=require

# Application Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Push Notifications (optional)
# Generate VAPID keys: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=mailto:admin@minnesota.ceo

# Analytics (optional)
# Custom analytics endpoint or service
ANALYTICS_ENDPOINT=

# API Keys (if using external services)
# GoDaddy DNS Management
GODADDY_API_KEY=
GODADDY_API_SECRET=
GODADDY_DOMAIN=minnesota.ceo

# DigitalOcean Deployment
DIGITALOCEAN_TOKEN=
DIGITALOCEAN_APP_ID=

# Cookie Consent Settings
COOKIE_CONSENT_ENABLED=true
COOKIE_CONSENT_PRIVACY_POLICY_URL=/privacy
COOKIE_CONSENT_TERMS_URL=/terms

# Security
# Generate: openssl rand -base64 32
JWT_SECRET=
SESSION_SECRET=

# Email Service (optional)
# For waitlist notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@minnesota.ceo

# Feature Flags
ENABLE_WAITLIST=true
ENABLE_NOMINATIONS=true
ENABLE_ADMIN_PANEL=true
ENABLE_ANALYTICS=true

# Development Settings
# Skip SSL verification in development
NODE_TLS_REJECT_UNAUTHORIZED=0
